<!-- https://build.phonegap.com/docs/config-xml -->

<?xml version="1.0" encoding="UTF-8"?>
<widget
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:gap="http://phonegap.com/ns/1.0"
	id="pl.acrid.uplayer"
	version="1.0.0">

	<name>µPlayer</name>

	<description>acrid.pl µPlayer -- A MP3 Player with minimal interface, perfect for audiobooks</description>

	<author
		href="http://www.acrid.pl/"
		email="info@acrid.pl">
		acrid.pl
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets" />
	</gap:platforms>
	
    <preference name="phonegap-version"     value="2.9.0" />
    <preference name="orientation"          value="portrait" />
    <preference name="target-device"        value="universal" />
    <preference name="fullscreen"           value="true" />
	<preference name="autorotate"           value="false" readonly="true" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="OpenAllWhitelistURLsInWebView" value="No" />

	<icon src="icon.png" gap:role="default" />

    <gap:splash src="splash.png" />
	
	<feature name="http://api.phonegap.com/1.0/network"/>
</widget>
